<%- include('./partials/header') %>

<div class="max-w-md mx-auto mt-12 p-6 bg-white rounded-lg shadow border">
    <h2 class="text-2xl font-bold text-center text-blue-700 mb-4">Payment Gateway</h2>
    <form action="/process-payment" method="POST" class="flex flex-col gap-4">
        <label>
            <span class="font-semibold">Billing Name</span>
            <input type="text" name="billingName" required placeholder="Enter your name" class="w-full px-3 py-2 border rounded mt-1">
        </label>
        <label>
            <span class="font-semibold">Billing Address</span>
            <input type="text" name="billingAddress" required placeholder="Enter your address" class="w-full px-3 py-2 border rounded mt-1">
        </label>
        <div class="flex gap-2">
            <label class="flex-1">
                <span class="font-semibold">Pincode</span>
                <input type="text" name="pincode" required pattern="\d{6}" maxlength="6" placeholder="6-digit pincode" class="w-full px-3 py-2 border rounded mt-1">
            </label>
            <label class="flex-1">
                <span class="font-semibold">Mobile Number</span>
                <input type="tel" name="mobile" required pattern="[0-9]{10}" maxlength="10" placeholder="10-digit mobile number" class="w-full px-3 py-2 border rounded mt-1">
            </label>
        </div>
        <div class="text-center my-4">
            <span class="block text-base font-semibold">Total Amount</span>
            <span class="text-xl text-green-600 font-bold">â‚¹ <%= totalAmount-totalDiscount+20 %></span>
        </div>
        <div class="flex flex-col items-center mb-2">
            <img src="images/QR-pic.jpg" alt="Scan to Pay" class="w-32 h-32 object-cover rounded border">
            <div class="text-sm text-blue-700 mt-2 font-medium">Scan QR to pay</div>
        </div>
        <button type="submit" id="payNowBtn" class="bg-blue-600 hover:bg-blue-700 text-white py-2 rounded font-bold text-base">
            Pay Now
        </button>
    </form>
    <div class="mt-6 text-center text-xs text-gray-500">
        <span>All transactions are <span class="font-semibold text-blue-700">secure</span> and <span class="font-semibold text-blue-700">encrypted</span>.</span>
    </div>
</div>

<%- include('./partials/footer') %>
