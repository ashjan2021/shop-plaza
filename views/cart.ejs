<%- include('./partials/header') %>

    <div class="min-h-screen w-full flex ">

        <!-- left div products list-->
        <div class="w-[70%] min-h-screen flex flex-col px-20 py-20">

            <h2 class="font-semibold text-2xl">Shopping Cart</h2>
            <div class="w-full h-[1px] bg-black mt-4 mb-10"></div>


            
            <!-- maindiv -->
            <div class="w-full flex flex-col gap-4">
                <% user.cart.forEach(function(item){ %>
                
                    <!-- a single bag description -->
                    <div class="w-full flex gap-4">
                        <!-- bag div -->
                        <div class="w-[30%] rounded-md overflow-hidden">
                            <div class="w-full flex justify-center items-center h-52 bg-[<%= item.bgcolor %>]">
                                <img class="h-[10rem]" src="data:image/jpeg;base64, <%= item.image.toString('base64') %>" alt="">
                            </div>
                            <div class="w-full flex justify-between px-5 py-4 bg-[<%= item.panelcolor %>]">
                                <h3 class="text-2xl"><%= item.name %></h3>
                                <!-- <div class="flex items-center gap-2">
                                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                                    <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                                    <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                                </div> -->
                            </div>
                            <div class="flex items-center text-white justify-between px-5 py-3 bg-[<%= item.textcolor %>]">
                                <h4 class="text-lg">Net Total</h4>
                                <h2 class="text-lg">₹ <%= item.price +20 +0 -item.discount; %></h2>
                            </div>
                        </div>

                        <!-- bag details div -->
                        <div class="w-[70%] shadow px-2 py-2">
                            <h3 class="text-xl"><%=item.name%></h3>
                            <div class="px-10 mt-5">
                                <div class="flex mt-2">
                                    <h4 class="w-1/3">MRP</h4>
                                    <h4>₹ <%= item.price %></h4>
                                </div>
                                <div class="flex mt-2">
                                    <h4 class="w-1/3">Discount on MRP</h4>
                                    <h4>₹ <%= item.discount %></h4>
                                </div>
                                <div class="flex mt-2">
                                    <h4 class="w-1/3">Shipping Fee</h4>
                                    <h4>FREE</h4>
                                </div>
                            </div>
                            <div class="w-full h-[1px] bg-black mt-10"></div>
                            <div class="flex mt-5">
                                <h3 class="w-1/3 text-xl">Total Amount</h3>
                                <h3 class="font-semibold text-xl text-green-600">₹ <%= item.price +0 +0 -item.discount; %></h3>
                            </div>
                            <div class="flex justify-end mt-10 mr-10">
                                <div class="bg-red-400 flex justify-center px-4 py-1 rounded-md">
                                    <a class="" href="/removefromcart/<%=item._id%>">delete</a>
                                </div>
                            </div>
                            <form action=""></form>
                        </div>
                    </div>

                    
                    <% }) %>
                </div>
        </div>

        <!-- total price description -->
        <div class="w-[30%] px-10 py-20 flex flex-col">
            <div class="w-full h-[60vh] px-5 py-10 text-xl leading-10">
                <h3 class="font-semibold text-gray-500">Price Details</h3>
                <div class="flex justify-between">
                    <h4>Price (<%= user.cart.length %> items)</h4>
                    <h4>₹ <%= totalAmount %></h4>
                </div>
                <div class="flex justify-between">
                    <h4>Discount</h4>
                    <h4>₹ <%= totalDiscount %></h4>
                </div>
                <div class="flex justify-between">
                    <h4>Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex justify-between">
                    <h4>Delivery Charges</h4>
                    <h4>free</h4>
                </div>


                <div class="flex justify-between mt-10 font-semibold">
                    <h4>Total Amount</h4>
                    <h4><%= totalAmount-totalDiscount+20 %></h4>
                </div>

                <div class="h-10 flex justify-center items-center rounded-md mt-5 bg-yellow-400">
                    <a href="/payment">Proceed to Buy</a>
                </div>
            </div>
        </div>
    </div>


    


<%- include('./partials/footer') %>